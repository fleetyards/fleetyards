%tr{id: starsystem.id}
  %td.preview.text-center
    = image_tag starsystem.store_image.url
  %td
    = starsystem.name
  %td
    - if starsystem.hidden?
      %i.fa.fa-check
    - else
      %i.far.fa-square
  %td.text-right
    .btn-group
      = link_to edit_admin_starsystem_path(starsystem), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
        %i.fa.fa-edit
      = confirm_link_to admin_starsystem_path(starsystem), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash
