{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/frontend/*"],
      "~/*": ["*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmit": true,
    "types": [
      "cypress",
      "node",
      "vitest/globals"
    ]
  },
  "include": [
    "@types/*",
    "app/frontend/**/*.ts",
    "app/frontend/**/*.tsx",
    "app/frontend/**/*.vue",
    "test/javascript/**/*.ts",
    "cypress/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
