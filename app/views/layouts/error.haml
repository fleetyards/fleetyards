!!!
%html{lang: I18n.locale}
  %head
    %meta{charset: "utf-8"}

    = favicon_link_tag 'favicon.png'
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
    %title=content_for?(:title) ? "#{yield(:title)} | #{default_title}" : default_title
    %meta{name: "description", content: I18n.t(:"meta.description")}
    %meta{name: "keywords", content: I18n.t(:"meta.keywords")}

    = favicon_link_tag 'touch-icon-iphone.png', rel: "apple-touch-icon", type: 'image/png'
    = favicon_link_tag 'touch-icon-ipad.png', rel: "apple-touch-icon", sizes: "76x76", type: 'image/png'
    = favicon_link_tag 'touch-icon-iphone-retina.png', rel: "apple-touch-icon", sizes: "120x120", type: 'image/png'
    = favicon_link_tag 'touch-icon-ipad-retina.png', rel: "apple-touch-icon", sizes: "152x152", type: 'image/png'

    != stylesheet_link_tag "https://fonts.googleapis.com/css?family=Droid+Sans:400,700|Orbitron:400,500,700,900"
    != stylesheet_link_tag "application"

    :javascript
      window.locale = "#{I18n.locale}";
    != javascript_include_tag "application"

    != csrf_meta_tags

  %body{data: {success: notice, info: alert, error: flash[:error], warning: flash[:warning]}}

    .container
      != yield
