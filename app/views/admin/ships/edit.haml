- content_for :title do
  = I18n.t(:"title.ship.edit")
.row
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h2
          = I18n.t(:"headlines.admin.ship.edit", ship: ship.name)

      .col-xs-12.col-md-4
        .btn-group.pull-right.resource-nav
          = link_to I18n.t(:"actions.back"), admin_ships_path(params: index_back_params, anchor: ship.id), class: "btn btn-default"

    .well
      = render "form"
