.row.fields
  .col-12.col-md-7
    .form-group{class: form_error?(fields.object, :url)}
      = fields.text_field :url, placeholder: I18n.t('helpers.placeholder.video.url'), class: 'form-control'
      = form_errors fields.object, :url

  .col-12.col-md-4
    .form-group{class: form_error?(fields.object, :video_type)}
      = fields.select :video_type, Video.video_types.keys.map { |w| [w.humanize, w] }, { include_blank: I18n.t('helpers.prompt.video.video_type') }, class: 'form-control'
      = form_errors fields.object, :video_type

  .col-12.col-md-1
    .d-flex.justify-content-end
      .btn-group-responsive.form-group
        = link_to_delete_fields fields, name: I18n.t('actions.delete'), class: "btn btn-danger" do
          %i.fa.fa-trash

  .clearfix
  .col-12.d-md-none.d-sm-block
    %hr
