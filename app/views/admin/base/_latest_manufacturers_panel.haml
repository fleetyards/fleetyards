.panel-wrapper.panel-outer-spacing
  .panel
    .panel-inner
      .panel-heading
        %h2.panel-title
          = I18n.t(:"labels.panels.latest_manufacturers")
      .table-responsive(style="height: 427px;")
        %table.table.table-striped
          %thead
            %tr
              %th= I18n.t(:"labels.table.name")
              %th= I18n.t(:"labels.table.updated_at")
              %th.actions.actions-one
          %tbody
            - @latest_manufacturers.each do |manufacturer|
              %tr
                %td
                  = manufacturer.name.html_safe
                %td
                  = I18n.l(manufacturer.updated_at, format: :short)
                %td
                  .btn-group
                    = link_to edit_admin_manufacturer_path(manufacturer), title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
                      %i.fa.fa-edit
      .panel-footer.text-right
        = link_to admin_manufacturers_path do
          = I18n.t('actions.more')
          %i.fa.fa-angle-right
