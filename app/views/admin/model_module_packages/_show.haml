%tr{id: model_module_package.id}
  %td.preview.text-center
    = image_tag model_module_package.store_image.url
  %td
    = model_module_package.name
  %td
    = model_module_package.model&.name
  %td
    %ul.list-unstyled
      - model_module_package.module_package_items.each do |item|
        %li= item.model_module.name
  %td
    - if model_module_package.hidden?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td
    - if model_module_package.active?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td.text-right
    .btn-group
      = link_to edit_admin_model_module_package_path(model_module_package), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
        %i.fa.fa-edit
      = confirm_link_to admin_model_module_package_path(model_module_package), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash
