{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/frontend/*"],
    },
    "types": [
      "node",
      "vitest/globals",
      "vite/client"
    ]
  },
  "include": [
    "@types/*",
    "app/frontend/**/*.ts",
    "app/frontend/**/*.d.ts",
    "app/frontend/**/*.vue",
    "spec/cypress/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
  ]
}
