<style>
  /* latin */
  @font-face {
    font-family: "Orbitron";
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src: url(<%= vite_asset_url('fonts/orbitron/yMJRMIlzdpvBhQQL_Qq7dy1biN15.woff2') %>) format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
      U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  body {
    background: black;
    background-color: black;
    background-image: none;
  }

  .app-intro {
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: space-evenly;
    height: 100vh;
    max-width: 100%;
    margin-top: -80px;
    margin-bottom: -50px;
    text-align: center;
  }

  .app-intro .logo {
    width: 200px;
    margin-right: -20px;
    margin-bottom: 25px;
  }

  .app-intro h1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: "Orbitron", sans-serif;
    font-size: 2.15rem;
    font-weight: 500;
    line-height: 1.2;
  }

  .app-intro .loader {
    position: absolute;
    left: 50%;
    z-index: 3000;
    width: 80px;
    height: 80px;
    margin: 40px auto;
    margin-left: -40px;
    -webkit-transform: rotateZ(45deg);
    transform: rotateZ(45deg);
  }

  .app-intro .loader .cube {
    position: relative;
    float: left;
    width: 50%;
    height: 50%;
    -webkit-transform: scale(1.1);
    -ms-transform: scale(1.1);
    transform: scale(1.1);
  }

  .app-intro .loader .cube::before {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #428bca;
    -webkit-transform-origin: 100% 100%;
    -ms-transform-origin: 100% 100%;
    transform-origin: 100% 100%;
    -webkit-animation: loader-foldcubeangle 2.4s infinite linear both;
    animation: loader-foldCubeAngle 2.4s infinite linear both;
    content: "";
  }

  .app-intro .loader.loader--admin .cube::before {
    background-color: #af0300;
  }

  .app-intro .loader.loader--admin .progress {
    background-color: #af0300;
  }

  .app-intro .loader .cube2 {
    -webkit-transform: scale(1.1) rotateZ(90deg);
    transform: scale(1.1) rotateZ(90deg);
  }

  .app-intro .loader .cube3 {
    -webkit-transform: scale(1.1) rotateZ(180deg);
    transform: scale(1.1) rotateZ(180deg);
  }

  .app-intro .loader .cube4 {
    -webkit-transform: scale(1.1) rotateZ(270deg);
    transform: scale(1.1) rotateZ(270deg);
  }

  .app-intro .loader .cube2::before {
    -webkit-animation-delay: 0.3s;
    animation-delay: 0.3s;
  }

  .app-intro .loader .cube3::before {
    -webkit-animation-delay: 0.6s;
    animation-delay: 0.6s;
  }

  .app-intro .loader .cube4::before {
    -webkit-animation-delay: 0.9s;
    animation-delay: 0.9s;
  }

  @-webkit-keyframes loader-foldCubeAngle {
    0%,
    10% {
      -webkit-transform: perspective(140px) rotateX(-180deg);
      transform: perspective(140px) rotateX(-180deg);
      opacity: 0;
    }

    25%,
    75% {
      -webkit-transform: perspective(140px) rotateX(0deg);
      transform: perspective(140px) rotateX(0deg);
      opacity: 1;
    }

    90%,
    100% {
      -webkit-transform: perspective(140px) rotateY(180deg);
      transform: perspective(140px) rotateY(180deg);
      opacity: 0;
    }
  }

  @keyframes loader-foldCubeAngle {
    0%,
    10% {
      -webkit-transform: perspective(140px) rotateX(-180deg);
      transform: perspective(140px) rotateX(-180deg);
      opacity: 0;
    }

    25%,
    75% {
      -webkit-transform: perspective(140px) rotateX(0deg);
      transform: perspective(140px) rotateX(0deg);
      opacity: 1;
    }

    90%,
    100% {
      -webkit-transform: perspective(140px) rotateY(180deg);
      transform: perspective(140px) rotateY(180deg);
      opacity: 0;
    }
  }

  @media (max-width: 992px) {
    .app-intro h1 {
      flex-direction: column;
    }

    .app-intro .logo {
      width: 200px;
      margin-right: 0;
      margin-bottom: 20px;
    }
  }
</style>
