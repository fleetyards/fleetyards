%tr{id: vehicle.id}
  %td
    = vehicle.model.name
  %td
    = vehicle.name
  %td
    - if vehicle.wanted?
      %i.fa.fa-check
    - else
      %i.far.fa-square
  %td
    = vehicle.user.username
  %td
    = time_ago_in_words(vehicle.updated_at)
    = "(#{l(vehicle.updated_at, format: :short)})"
  %td
    = time_ago_in_words(vehicle.created_at)
    = "(#{l(vehicle.created_at, format: :short)})"
