{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "app/packs/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmit": true
  },
  "include": [
    "@types/*",
    "app/packs/**/*.ts",
    "app/packs/**/*.tsx",
    "app/packs/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
