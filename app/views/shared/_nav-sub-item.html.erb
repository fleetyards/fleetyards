<%
  active ||= false
%>
<div class="relative mr-2">
  <div class="absolute -right-2 top-0 bottom-0 w-1 rounded-md transition duration-300<%= active ? ' bg-brand-primary' : '' %>"></div>
  <a href="<%= defined?(href) ? href : nil %>" class="flex items-center ml-2 pl-6 mr-1 pr-1 my-1 py-1 text-base font-normal rounded-md hover:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-primary/50 transition-colors duration-300 ease-in<%= active ? ' text-neutral-400' : ' text-neutral-300' %>">
    <% if defined?(icon) %>
    <i class="mr-3 flex-shrink-0 h-4 w-4 <%= icon %>"></i>
    <% end %>
    <span class="flex-1"><%= label %></span>
    <% if defined?(badge) %>
    <span class="bg-gray-900 ml-3 inline-block py-0.5 px-3 text-xs font-medium rounded-full">
      <%= badge %>
    </span>
    <% end %>
  </a>
</div>
