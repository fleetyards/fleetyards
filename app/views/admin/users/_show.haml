%tr{id: user.id}
  %td
    .flex.items-center
      - if user.avatar.present?
        %img{src: user.avatar.url, class: 'w-12 h-12 object-cover rounded-full bg-brand-grayBackground/80'}
      - else
        %span{class: 'flex justify-center items-center w-12 h-12 bg-brand-grayBackground/80 rounded-full'}
          = user.shortname
      .ml-2
        = user.username
  %td
    = user.email
  %td
    - if user.current_sign_in_at.present?
      = time_ago_in_words(user.current_sign_in_at)
      = "(#{l(user.current_sign_in_at, format: :short)})"
  %td
    = time_ago_in_words(user.created_at)
    = "(#{l(user.created_at, format: :short)})"
  %td
    .btn-group
      = link_to edit_admin_user_path(user), title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
        %i.fa.fa-edit
      = confirm_link_to resend_confirmation_admin_user_path(user), data: { notyConfirm: I18n.t(:"messages.confirm.resend_confirmation") }, title: I18n.t(:"actions.resend_confirmation"), method: :put, class: "btn btn-dark" do
        %i.fa.fa-envelope
      = confirm_link_to admin_user_path(user), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash
