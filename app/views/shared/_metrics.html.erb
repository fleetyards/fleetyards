<%= render('shared/ui_border', classes: 'mb-4') do %>
  <div class="border-3 border-brand-grayBorder/90 rounded-panel bg-brand-primary flex py-3 px-2 sm:p-4 overflow-hidden">
    <div class="mr-4 w-28 flex-shrink-0 flex justify-center items-center h-full self-center">
      <i class="<%= icon %> fa-4x"></i>
    </div>
    <div class="flex flex-col flex-1 justify-center content-end">
      <dt class="flex justify-end">
        <p class="text-sm font-medium dark:text-neutral-300 truncate">
          <%= label %>
        </p>
      </dt>
      <dd class="mt-4 flex justify-end items-baseline">
        <p class="text-4xl font-semibold dark:text-slate-300">
          <%= yield %>
        </p>
      </dd>
    </div>
  </div>
<% end %>
