%tr{id: user.id}
  %td
    = user.username
  %td
    = user.email
  %td
    - if user.last_active_at.present?
      = time_ago_in_words(user.last_active_at)
      = "(#{l(user.last_active_at, format: :short)})"
  %td
    = time_ago_in_words(user.created_at)
    = "(#{l(user.created_at, format: :short)})"
  %td
    .btn-group
      = link_to edit_admin_user_path(user), title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
        %i.fa.fa-edit
      = confirm_link_to resend_confirmation_admin_user_path(user), data: { notyConfirm: I18n.t(:"messages.confirm.resend_confirmation") }, title: I18n.t(:"actions.resend_confirmation"), method: :put, class: "btn btn-dark" do
        %i.fa.fa-envelope
      = confirm_link_to login_as_admin_user_path(user), data: { notyConfirm: I18n.t(:"messages.confirm.admin_login_in_as") }, title: I18n.t(:"actions.login_in_as"), method: :post, class: "btn btn-dark" do
        %i.fa.fa-user-group-crown
      = confirm_link_to admin_user_path(user), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash
